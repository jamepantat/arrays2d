#include<iostream>
using namespace std;
int main(void)
{
int score[2][3] ;
cout <<"Input score"<<endl;
for(int i=0;i<2;i++){
		cout <<"Enter subtest "<<i+1<<" : ";
		cin >>score[i][0];
		cout <<"Enter midterm "<<i+1<<" : ";
		cin  >> score[i][1];
		cout <<"Enter final "<<i+1<<" : ";
		cin >> score[i][2];
		
}

cout <<"Display score" <<endl;
cout <<"------------------------------------"<<endl;
cout <<"Subtest\tMidterm\tFinal\t"<<endl;
cout <<"------------------------------------"<<endl;
for (int i = 0; i < 2; ++i){
	for (int j = 0; j < 3; ++j)
	{
		cout << score[i][j] <<"\t";
	}
	cout <<endl;
}
cout <<"-----------------------------------"<<endl;
cout <<"Transpose Matrix" <<endl;
for( int i = 0; i < 3; ++i)
{ for (int j = 0; j < 2; ++j)
 {
	 cout << score[j][i]<<"\t";
 }
cout<<endl;
}

cout << "-----------------------------------------------"<<endl;
return 0;
}
